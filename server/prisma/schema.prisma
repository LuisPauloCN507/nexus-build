generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game {
  id         String      @id @default(uuid())
  name       String
  slug       String      @unique
  logoUrl    String
  characters Character[]
}

model Character {
  id           String   @id @default(uuid())
  name         String
  imageUrl     String
  tier         String   
  buildDetails String   
  sourceName   String   
  sourceUrl    String   
  gameId       String
  game         Game     @relation(fields: [gameId], references: [id])
}
