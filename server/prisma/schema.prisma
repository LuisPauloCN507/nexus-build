generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game {
  id         String      @id @default(uuid())
  name       String
  slug       String      @unique
  logoUrl    String
  characters Character[]
}

model Character {
  id           String   @id @default(uuid())
  name         String
  tier         String
  imageUrl     String
  buildDetails String
  strategy     String?
  
  // Status para a Vers√£o Global
  speed        String?  @default("Low")
  stamina      String?  @default("Low")
  power        String?  @default("Low")
  guts         String?  @default("Low")
  wisdom       String?  @default("Low")
  
  sourceName   String
  sourceUrl    String
  game         Game     @relation(fields: [gameId], references: [id])
  gameId       String
}